{
    "name": "hongxunpan/simple-framework",
    "description": "a simple framework for php",
    "type": "project",
    "require": {
        "php": "^8.0.20",
        "hongxunpan/php-tools": "2.1.0",
        "hongxunpan/db": "1.0.2"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "HongXunPan",
            "email": "me@kangxuanpeng.com"
        }
    ],
    "minimum-stability": "dev",
    "scripts": {
        "clearCache": [
            "rm -rf bootstrap/cache/*"
        ],
        "autoload": "@composer dump-autoload",
        "post-install-cmd": [
            "@autoload",
            "@clearCache"
        ],
        "post-update-cmd": [
            "@autoload",
            "@clearCache"
        ]
    }
}
